{
  "name": "clean-node-api",
  "version": "1.0.4",
  "main": "index.js",
  "repository": "https://github.com/renancorreadev/cleanNodeApi.git",
  "author": "renancorreadev <producer@skynance.net>",
  "license": "MIT",
  "scripts": {
    "start": "sucrase-node src/main/server.ts",
    "prepare": "husky install",
    "release": "standard-version",
    "commit": "./node_modules/cz-customizable/standalone.js",
    "lint": "eslint src --max-warnings=0",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test -- --watch -c jest-unit-config.ts",
    "test:integration": "yarn test -- --watch -c jest-integration-config.ts",
    "test:staged": "yarn test -- --findRelatedTests",
    "test:ci": "yarn test -- --coverage"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint",
      "yarn test:staged --passWithNoTests"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@shelf/jest-mongodb": "^4.1.3",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.2",
    "@types/mongodb": "4.0.7",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.10",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.0.1",
    "commitizen": "^4.2.4",
    "commitlint-config-gitmoji": "^2.2.5",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "^6.9.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.4.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "release": "^6.3.0",
    "standard-version": "^9.5.0",
    "sucrase": "^3.29.0",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "fast-glob": "^3.2.12",
    "mongodb": "^4.12.1",
    "validator": "^13.7.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  }
}
